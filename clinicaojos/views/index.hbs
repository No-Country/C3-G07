    <header class="header" id="header">
      <div class="header__container">
        <div class="header__toggle" id="toggle">
          <i class="fas fa-bars"></i>
        </div>

        <nav class="menu">
          <ul class="menu__list">
            <li class="menu__item">
              <a class="menu__link" href="#" rel="noopener noreferrer">
                Nosotros
              </a>
            </li>
            <li class="menu__item">
              <a class="menu__link" href="#" rel="noopener noreferrer">
                Institucional
              </a>
            </li>
            <li class="menu__item">
              <a class="menu__link" href="#" rel="noopener noreferrer">
                Especialidades
              </a>
            </li>
            <li class="menu__item">
              <a class="menu__link" href="#" rel="noopener noreferrer">
                Contacto
              </a>
            </li>
          </ul>
        </nav>

        <a class="linked" href="index.html">
          <img
            class="linked__logo"
            loading="lazy"
            src="/images/Logo.png"
            alt="logo clínica pérez"
          />
        </a>

        <button class="btn" type="submit">Ingresar</button>
      </div>
    </header>

    <!-- render ajax -->
    <main class="main" id="main">
      <section class="hero" id="hero">
        <h1 class="hero__title">Bienvenidos a clínica Pérez</h1>

        <p class="hero__paragraph">
          Ponemos a su disposición nuestra atención personalizada y lo último en
          equipamiento oftalmológico
        </p>

        <button class="btn btn--turno" id="btnTurno" type="submit">
          Pedir turno
        </button>
      </section>

      <section class="emergency" id="emergency">
        <h2 class="emergency__title">Emergencias</h2>
        <p class="emergency__paragraph">0810-555-1661</p>
      </section>

      <section class="specialities" id="specialities">
        <h2 class="specialities__title">Nuestras especialidades</h2>
        <UL
          class="specialities__list"
          name="specialitiesSurgery"
          id="specialitiesSurgery"
        >
          {{#each especialidad}}
          <li value="" selected disabled><a class="button">{{nombre_especialidad}}</a></li>
          {{/each}}
        </UL>
      </section>

      <section class="location" id="location">
        <h2 class="location__title">¿Dónde estamos?</h2>

        <div class="location__container">
          <div class="location__description">
            <h3>Clínica Dr. Pérez</h3>
            <p>
              Avenida La Plata 188, Caballito, Ciudad Autónoma de Buenos Aires,
              Argentina.
            </p>
          </div>

          <div class="location__map">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3283.4908244268986!2d-58.43076338504341!3d-34.61703486570928!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcca44aa1db4ff%3A0xae57e16033e8ba49!2sAv.%20La%20Plata%20188%2C%20C1212%20CABA%2C%20Argentina!5e0!3m2!1ses-419!2sco!4v1645291240157!5m2!1ses-419!2sco"
              style="border: 0"
              allowfullscreen=""
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </section>

      <section class="writer" id="writer">
        <h2 class="writer__title">Escribinos</h2>
        <form class="writer__form">
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Nombre"
            value=""
            required
          />
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            required
          />
          <input
            type="text"
            name="message"
            id="message"
            placeholder="Mensaje"
            required
          />
          <input type="submit" value="Enviar" />
        </form>
      </section>

      <section class="contact" id="contact">
        <h2 class="contact__title">Contacto</h2>
        <div class="contact__card">
          <h3>Líneas rotativas</h3>
          <p>0341 4406095</p>

          <h3>Urgencias 24 hs</h3>
          <p>0341 4406095</p>

          <h3>Turnos Whatsapp</h3>
          <p>0341 4406095</p>
        </div>
        <div class="contact__social">
          <i class="fab fa-whatsapp"></i>
          <i class="fab fa-instagram"></i>
          <i class="fab fa-facebook"></i>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="footer__container">
        <img
          loading="lazy"
          src="src/assets/images/Branding_logo-Footer.svg"
          alt="logo clínica pérez"
        />

        <div class="addres">
          <i class="fas fa-map-marker-alt"></i>
          <p>Avenida La Plata 188, Caba.</p>
        </div>
      </div>
    </footer>
