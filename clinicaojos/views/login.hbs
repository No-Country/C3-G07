    <head>
      <link rel="stylesheet" href="/stylesheets/login.css"/>
    </head>

    <header class="header">
        <div class="header__container">
            <div class="header__toggle" id="toggle">
                <i class="fas fa-bars"></i>
            </div>

            <nav class="menu">
                <ul class="menu__list">
                    <li class="menu__item">
                        <a class="menu__link" href="/" rel="noopener noreferrer">Home</a>
                    </li>
                </ul>
            </nav>

            <a class="linked">
                <img class="linked__logo" loading="lazy" src="/images/Logo.png" alt="logo clínica pérez" />
            </a>

            <button class="btn" type="submit">Ingresar</button>
        </div>
    </header>

    <div class="cont">
        <div class="form">
            <form action="login" method="post">
                <h1>Iniciar sesión</h1>
                <input type="text" class="user" placeholder="Usuario" name="user"/>
                <input type="password" class="pass" placeholder="Contraseña" name="password"/>
                <button class="login" type="submit">Ingresar</button>
                <p>¿Olvidaste tu contraseña? Recuperala acá</p>
                <p class="divider">o</p>
                <button class="reg">Registrarse</button>
            </form>
        </div>
    </div>

    <footer class="footer">
        <div class="footer__container">
          <img
            loading="lazy"
            src="/images/Branding_logo-Footer.svg"
            alt="logo clínica pérez"
          />
  
          <div class="addres">
            <i class="fas fa-map-marker-alt"></i>
            <p>Avenida La Plata 188, Caba.</p>
          </div>
        </div>
    </footer>